generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  RETURNED
  CANCELLED
}

model Order {
  id         String      @id @default(cuid())
  bookId     String
  quantity   Int
  totalPrice Float
  status     OrderStatus @default(PENDING)
  currency   String
  createdAt  DateTime    @default(now())
}
